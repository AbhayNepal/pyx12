<!-- pyx12 configuration file -->

<params version="1.0">
    <param name="map_path">
        <value>/usr/local/share/pyx12/map</value>
        <comment>Where to find the xml maps</comment>
    </param>
    <param name="pickle_path">
        <value>%(map_path)s</value>
        <comment>Where to find the serialized versions of the xml maps, if compiled</comment>
    </param>
    <param name="exclude_external_codes">
        <!--<value>states</value>-->
        <value></value>
        <comment>Comma separated list of external_codes to exclude</comment>
    </param>
    <param name="ignore_syntax">
        <type>boolean</type>
        <value>False</value>
        <comment>Ignore syntax validation</comment>
    </param>
    <param name="charset">
        <value>E</value>
        <comment>E = extended, B = Basic</comment>
    </param>
    <param name="ignore_codes">
        <type>boolean</type>
        <value>False</value>
        <comment></comment>
    </param>
    <param name="ignore_ext_codes">
        <type>boolean</type>
        <value>False</value>
        <comment></comment>
    </param>
    <param name="skip_html">
        <type>boolean</type>
        <value>False</value>
        <comment></comment>
    </param>
    <param name="skip_997">
        <type>boolean</type>
        <value>False</value>
        <comment></comment>
    </param>
    <param name="simple_dtd">
        <value>http://www.kazoocmh.org/x12simple.dtd</value>
        <comment></comment>
    </param>
    <param name="idtag_dtd">
        <value>http://www.kazoocmh.org/x12idtag.dtd</value>
        <comment></comment>
    </param>
</params>
